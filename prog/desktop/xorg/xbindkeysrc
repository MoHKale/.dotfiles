"emacs-focus -ac"
  Mod4 + n

"emacs-focus -acb"
  Mod4 + p

"emacs-make-frame"
  Mod4 + Return + Release

"st"
  Control + Shift + apostrophe

"term-dwim"
  Control + apostrophe

"spawn-term fzf-dmenu -H"
  Mod4 + bracketleft + Release

"spawn-term fzf-dmenu -aH"
  Mod4 + bracketright + Release

"moji -n -d ' '"
  Mod4 + k

"moji -i -n -d ' '"
  Mod4 + Shift + k

