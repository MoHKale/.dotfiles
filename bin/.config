# -*- mode: yaml -*-
- clean:
    ~/.local/bin:
      recursive: true

- link:
    ~/.local/bin/vipe:
    ~/.local/bin/spawn-term:
    ~/.local/bin/image2ascii:
    ~/.local/bin/img2pdf:
    ~/.local/bin/bulkrename:
    ~/.local/bin/bulkchmod:
    ~/.local/bin/condemn:
    ~/.local/bin/fp: file-path
    ~/.local/bin/magnet2torrent:
    ~/.local/bin/build-aliases:
    ~/.config/mojis:
    ~/.local/bin/moji:
    ~/.local/bin/error-colors:
    ~/.local/bin/git-prompt:
    ~/.local/bin/filter-globs:
    ~/.local/bin/ls-aliases:
    ~/.local/bin/ls-platform:
    ~/.local/bin/ls-fsdirmaps:
    ~/.local/bin/ls-project:
    ~/.local/bin/emacs-focus:
      path: emacs-focus
      if: grep -iE emacs <<< "$DOTBOTS"
    ~/.local/bin/emacs-make-frame:
      path: emacs-make-frame
      if: grep -iE emacs <<< "$DOTBOTS"
    ~/.local/bin/fzf-dmenu:
      path: fzf-dmenu
      if: grep -iE xorg <<< "$DOTBOTS"
    ~/.local/bin/term-dwim:
      path: term-dwim
      if: grep -iE xorg <<< "$DOTBOTS"
    ~/.local/bin/app-windows:
      path: app-windows
      if: grep -iE xorg <<< "$DOTBOTS"
