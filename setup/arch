#!/usr/bin/sh
# echo out the architecture of current computer.
# source [[https://stackoverflow.com/a/48679640/6247387][here]].

case "$(uname -m)" in
    i386)   echo "386" ;;
    i686)   echo "386" ;;
    x86_64) echo "amd64" ;;
    arm) if dpkg --print-architecture | grep -q "arm64"; then
             echo "arm64"
         else
             echo "arm"
         fi
         ;;
    *) echo "arch: unknown architecture: $(uname -a)" >&2
esac
