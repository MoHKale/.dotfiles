;; -*- mode: clojure -*-
(
 (:packages (:apt "zsh")
            (:pacman "zsh"))

 (:shell {:desc "Installing zplug"
          :cmd "if ! [ -e \"$HOME/.config/zshell/zplug\" ]; then
                  curl -sL --proto-redir -all,https https://raw.githubusercontent.com/zplug/installer/master/installer.zsh | zsh
                fi"})

 #dot/link-gen
 (:link ("~/.config/zshell"
         (".zprofile" ".zshrc" ".zshenv"))
        "~/.zshenv")

 (:link
  "bindings" "~/.config/bindings/zshell"
  "prompt" "~/.config/prompt/zsh")
)
